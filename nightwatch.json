{
  "src_folders": ["tests"],
  "output_folder": "./node_modules/nightwatch/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",

  "selenium": {
    "start_process": true,
    "server_path": "./bin/selenium-server-standalone-3.5.3.jar",
    "log_path": "./node_modules/nightwatch/",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./bin/chromedriver"
    },
    "test_workers": {
      "enabled": true,
      "workers": "auto"
    },
    "live_output": true
  },

  "test_settings": {
    "default": {
      "launch_url": "https://staycircles.com",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "./screens",
        "on_failure": true
      },
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    }
  }
}
